<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<artifactId>parent</artifactId>
		<groupId>net.sf.taverna</groupId>
		<version>0.1.2009-02-12</version>
	</parent>

	<groupId>net.sf.taverna.dataviewer</groupId>
	<artifactId>dataviewer-product</artifactId>
	<name>Taverna DataViewer Tool product</name>
	<version>2.2.0</version>

	<packaging>pom</packaging>

	<properties>
		<t2.core.version>1.2</t2.core.version>
		<t2.ui.api.version>1.2</t2.ui.api.version>
		<t2.ui.impl.version>1.2</t2.ui.impl.version>
		<taverna.version>1.7.2.2</taverna.version>
		<t2.ui.components.version>1.2</t2.ui.components.version>
		<t2.ui.renderers-exts.version>1.2.1</t2.ui.renderers-exts.version>
		<t2.infrastructure.version>2.2</t2.infrastructure.version>
	</properties>

	<repositories>
		<repository>
			<releases />
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
			<id>mygrid-repository</id>
			<name>myGrid Repository</name>
			<url>http://www.mygrid.org.uk/maven/repository</url>
		</repository>
	</repositories>

	<modules>
		<module>dataviewer</module>
		<module>dataviewer-distro</module>
	</modules>
	
	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>net.sf.taverna.t2.ui-impl</groupId>
				<artifactId>data-management-config</artifactId>
				<version>${t2.ui.impl.version}</version>
				<exclusions>
					<exclusion>
						<groupId>org.apache.derby</groupId>
						<artifactId>derby</artifactId>
					</exclusion>
					<exclusion>
						<groupId>org.apache.derby</groupId>
						<artifactId>derbynet</artifactId>
					</exclusion>
					<exclusion>
						<groupId>org.apache.derby</groupId>
						<artifactId>derbyclient</artifactId>
					</exclusion>
				</exclusions>
			</dependency>
			<dependency>
				<groupId>net.sf.taverna.t2.ui-exts</groupId>
				<artifactId>renderers-exts</artifactId>
				<version>${t2.ui.renderers-exts.version}</version>
				<exclusions>
					<exclusion>
						<groupId>net.sf.taverna.t2.ui-impl</groupId>
						<artifactId>workbench-impl</artifactId>
					</exclusion>
				</exclusions>
			</dependency>
			<dependency>
				<groupId>net.sf.taverna.t2.ui-components</groupId>
				<artifactId>results-view</artifactId>
				<version>${t2.ui.components.version}</version>
				<exclusions>
					<exclusion>
						<groupId>net.sf.taverna.t2.ui-components</groupId>
						<artifactId>graph-view</artifactId>
					</exclusion>
					<exclusion>
						<groupId>net.sf.taverna.t2.ui-api</groupId>
						<artifactId>menu-api</artifactId>
					</exclusion>
					<exclusion>
						<groupId>net.sf.taverna.t2.ui-api</groupId>
						<artifactId>workbench-api</artifactId>
					</exclusion>
					<exclusion>
						<groupId>net.sf.taverna.t2.core</groupId>
						<artifactId>provenanceconnector</artifactId>
					</exclusion>
				</exclusions>
			</dependency>
			<dependency>
				<groupId>uk.org.mygrid.taverna.baclava</groupId>
				<artifactId>baclava-core</artifactId>
				<version>${taverna.version}</version>
				<exclusions>
					<exclusion>
						<groupId>uk.org.mygrid.taverna.raven</groupId>
						<artifactId>raven</artifactId>
					</exclusion>
					<exclusion>
						<groupId>uk.org.mygrid.taverna.raven</groupId>
						<artifactId>raven-log4j</artifactId>
					</exclusion>
				</exclusions>
			</dependency>
		</dependencies>
	</dependencyManagement>
	
	<scm>
	    <connection>scm:svn:http://taverna.googlecode.com/svn/taverna/products/net.sf.taverna.dataviewer/trunk/</connection>
        <developerConnection>scm:svn:https://taverna.googlecode.com/svn/taverna/products/net.sf.taverna.dataviewer/trunk/</developerConnection>
        <url>http://code.google.com/p/taverna/source/browse/#svn/taverna/products/net.sf.taverna.dataviewer/trunk/</url>
    </scm>
	
</project>