<page title="Simple example">
	<header>
		<init>
			<run extract="inputHandler">
				import net.sf.taverna.ocula.action.*;
				inputHandler = new ProcessInput();
			</run>
		</init>
	</header>
	<contents>
		<simpleinput>
			<text name="userNameField" label="User name">
				myusername
			</text>
			<text name="emailField" label="Email address">
				email@provider.co.uk
			</text>
			<button name="Submit">
				<action>
					<processfields mode="all" target="inputHandler" />
				</action>
			</button>
			<button name="Clear">
				<action>
					<clear mode="all" />
			 	</action>
			 </button>
		</simpleinput>
	</contents>
</page>