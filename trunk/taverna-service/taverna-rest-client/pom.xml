<?xml version="1.0" encoding="UTF-8"?>
<project>
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>uk.org.mygrid.tavernaservice</groupId>
		<artifactId>tavernaservice</artifactId>
		<version>1.0.0</version>
	</parent>
	<groupId>uk.org.mygrid.tavernaservice</groupId>
	<artifactId>taverna-rest-client</artifactId>
	<packaging>jar</packaging>
	<name>Taverna service REST client</name>
	<description>
		Client library interfacing Taverna REST service. Based on the
		Restlet framework.
	</description>
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.0</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<version>1.2.13</version>
		</dependency>
		<dependency>
			<groupId>jdom</groupId>
			<artifactId>jdom</artifactId>
			<version>1.0</version>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.tavernaservice</groupId>
			<artifactId>taverna-interface</artifactId>
			<version>1.0.0</version>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.tavernaservice</groupId>
			<artifactId>taverna-rest-xmlbeans</artifactId>
			<version>1.0.0</version>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.tavernaservice</groupId>
			<artifactId>taverna-rest</artifactId>
			<version>1.0.0</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.tavernaservice</groupId>
			<artifactId>taverna-rest</artifactId>
			<version>1.0.0</version>
            <type>test-jar</type>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.tavernaservice</groupId>
			<artifactId>taverna-datastore</artifactId>
			<version>1.0.0</version>
            <type>test-jar</type>
			<scope>test</scope>
		</dependency>
        
		<dependency>
			<groupId>com.noelios.restlet</groupId>
			<artifactId>com.noelios.restlet.ext.httpclient</artifactId>
			<version>1.0.2</version>
		</dependency>

	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>start derby test db</id>
						<phase>test-compile</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<!--<echo message="Starting Apache Derby" />-->
								<java
									classname="org.apache.derby.drda.NetworkServerControl"
									fork="yes" spawn="yes" dir="target">
									<classpath
										refid="maven.test.classpath" />
									<arg line="start -p 1337" />
								</java>
								<echo message="Started Apache Derby" />
							</tasks>
						</configuration>
					</execution>
					<execution>
						<id>stop derby test db</id>
						<phase>test</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<!--<echo message="Stopping Apache Derby" />-->
								<java
									classname="org.apache.derby.drda.NetworkServerControl"
									fork="yes">
									<classpath
										refid="maven.test.classpath" />
									<arg line="shutdown -p 1337" />
								</java>
							</tasks>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
