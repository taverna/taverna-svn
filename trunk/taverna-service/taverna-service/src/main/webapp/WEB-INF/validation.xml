<form-validation>
   <formset>
      <form name="registerForm">
         <field property="email"
         	depends="required,email">
            	<msg name="email" key="errors.invalid"/>
            <arg key="registerForm.label.email"/>
	 	</field>
	 	
	 	<field property="name"
         	depends="required,minlength,maxlength">
            	<msg name="name" key="errors.invalid"/>
            <arg key="registerForm.label.name"/>
            <arg1 name="minlength" key="${var:minlength}" resource="false"/>
        	<var><var-name>minlength</var-name><var-value>3</var-value></var>
        	<arg2 name="maxlength" key="${var:maxlength}" resource="false"/>
        	<var><var-name>maxlength</var-name><var-value>12</var-value></var>
	 	</field>
	 	
	 	<field property="password"
         	depends="required,minlength,maxlength">
            	<msg name="password" key="errors.invalid"/>
            <arg key="registerForm.label.password"/>
            <arg1 name="minlength" key="${var:minlength}" resource="false"/>
        	<var><var-name>minlength</var-name><var-value>5</var-value></var>
        	<arg2 name="maxlength" key="${var:maxlength}" resource="false"/>
        	<var><var-name>maxlength</var-name><var-value>12</var-value></var>
	 	</field>
	 	
	 	<field property="confirm"
         	depends="required,validwhen">
            	<msg name="validwhen" key="errors.password_mismatch"/>
            <arg key="registerForm.label.confirm"/>
            <var><var-name>test</var-name><var-value>(*this* == password)</var-value></var>
	 	</field>
	 	
      </form>
   </formset>
</form-validation>
