<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>remotetaverna</artifactId>
		<groupId>uk.org.mygrid.remotetaverna</groupId>
		<version>0.4-SNAPSHOT</version>
	</parent>
	<groupId>uk.org.mygrid.remotetaverna</groupId>
	<artifactId>taverna-service</artifactId>
	<version>0.4-SNAPSHOT</version>
	<packaging>war</packaging>
	<name>Taverna web-app service</name>
	<description>
		The Remote Taverna Execution application wrapping as a web-app (WAR).
	</description>
	<build>
		<finalName>remotetaverna</finalName>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>tomcat-maven-plugin</artifactId>
				<configuration>
					<path>/taverna-service</path>
					<port>7070</port>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<!-- Standard libraries -->
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<scope>test</scope>
		</dependency>
		
		<!--  Remote Taverna -->
		<dependency>
			<groupId>uk.org.mygrid.remotetaverna</groupId>
			<artifactId>taverna-rest</artifactId>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.remotetaverna</groupId>
			<artifactId>taverna-engine</artifactId>
		</dependency>
		
		<!-- Restlet -->
		<dependency>
			<groupId>com.noelios.restlet</groupId>
			<artifactId>com.noelios.restlet.ext.servlet</artifactId>
		</dependency>
	</dependencies>
</project>
