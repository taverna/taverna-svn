	<packaging>war</packaging>
	<name>Taverna web-app service</name>
	<description>
		The Remote Taverna Execution application wrapping as a web-app (WAR).
	</description>
	<build>
		<plugins>
<!-- only works for packaging jar
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>appassembler-maven-plugin</artifactId>
                <configuration>
                    <programs>
                        <program>
                            <mainClass>net.sf.taverna.service.remotetaverna</mainClass>
                            <name>remotetaverna</name>
                        </program>
                    </programs>
                </configuration>
            </plugin>
-->
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>tomcat-maven-plugin</artifactId>
				<configuration>
					<path>/taverna-service</path>
					<port>7070</port>
				</configuration>
			</plugin>
		</plugins>
	</build>
