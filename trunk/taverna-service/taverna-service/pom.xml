<?xml version="1.0" encoding="UTF-8"?>
<project>
	<parent>
		<artifactId>tavernaservice</artifactId>
		<groupId>uk.org.mygrid.tavernaservice</groupId>
		<version>1.0.0</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<groupId>uk.org.mygrid.tavernaservice</groupId>
	<artifactId>taverna-service</artifactId>
	<packaging>war</packaging>
	<name>Taverna service</name>
	<description>
		This is the Taverna Service application itself that runs the
		rest server, and web-app.
	</description>
	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>tomcat-maven-plugin</artifactId>
				<configuration>
					<path>/taverna-service</path>
					<port>7070</port>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.0</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.tavernaservice</groupId>
			<artifactId>taverna-rest</artifactId>
			<version>1.0.0</version>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.tavernaservice</groupId>
			<artifactId>taverna-engine</artifactId>
			<version>1.0.0</version>
		</dependency>
		<dependency>
			<groupId>com.noelios.restlet</groupId>
			<artifactId>com.noelios.restlet.ext.servlet</artifactId>
			<version>1.0.2</version>
		</dependency>
	</dependencies>
</project>