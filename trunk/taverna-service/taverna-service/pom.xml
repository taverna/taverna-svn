<?xml version="1.0" encoding="UTF-8"?>
<project>
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>uk.org.mygrid.tavernaservice</groupId>
		<artifactId>tavernaservice</artifactId>
		<version>1.0.0</version>
	</parent>
	<groupId>uk.org.mygrid.tavernaservice</groupId>
	<artifactId>taverna-service</artifactId>
	<packaging>jar</packaging>
	<name>Taverna service</name>
	<description>
		This is the Taverna Service application itself that runs the rest server, and web-app.
	</description>
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.0</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.tavernaservice</groupId>
			<artifactId>taverna-rest</artifactId>
			<version>1.0.0</version>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.tavernaservice</groupId>
			<artifactId>taverna-engine</artifactId>
			<version>1.0.0</version>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<skip>true</skip>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
