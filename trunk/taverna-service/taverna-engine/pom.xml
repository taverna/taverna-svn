<?xml version="1.0" encoding="UTF-8"?>
<project>
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>uk.org.mygrid.tavernaservice</groupId>
		<artifactId>tavernaservice</artifactId>
		<version>1.0.0</version>
	</parent>
	<groupId>uk.org.mygrid.tavernaservice</groupId>
	<artifactId>taverna-engine</artifactId>
	<packaging>jar</packaging>
	<name>Taverna service backend engine</name>
	<description>
		The backend engine that taverna-wsdl communicates with through
		Raven. Queues workflows and executes them from a worker thread.
	</description>
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.0</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>commons-io</groupId>
			<artifactId>commons-io</artifactId>
			<version>1.2</version>
		</dependency>

		<dependency>
			<groupId>uk.org.mygrid.tavernaservice</groupId>
			<artifactId>taverna-interface</artifactId>
			<version>1.0.0</version>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.tavernaservice</groupId>
			<artifactId>taverna-datastore</artifactId>
			<version>1.0.0</version>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.tavernaservice</groupId>
			<artifactId>taverna-datastore</artifactId>
			<version>1.0.0</version>
			<type>test-jar</type>
			<scope>test</scope>
		</dependency>

		<!-- Core Taverna bindings -->
		<dependency>
			<groupId>uk.org.mygrid.taverna</groupId>
			<artifactId>taverna-bootstrap</artifactId>
			<version>1.5.1</version>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.taverna.scufl</groupId>
			<artifactId>scufl-tools</artifactId>
			<version>1.5.1</version>
		</dependency>

		<!--  All known Taverna processors -->
		<dependency>
			<groupId>uk.org.mygrid.taverna.processors</groupId>
			<artifactId>taverna-apiconsumer-processor</artifactId>
			<version>1.5.1</version>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.taverna.processors</groupId>
			<artifactId>taverna-beanshell-processor</artifactId>
			<version>1.5.1</version>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.taverna.processors</groupId>
			<artifactId>taverna-biomart-processor</artifactId>
			<version>1.5.1</version>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.taverna.processors</groupId>
			<artifactId>taverna-biomoby-processor</artifactId>
			<version>1.5.1</version>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.taverna.processors</groupId>
			<artifactId>taverna-inferno-processor</artifactId>
			<version>1.5.1</version>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.taverna.processors</groupId>
			<artifactId>taverna-java-processor</artifactId>
			<version>1.5.1</version>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.taverna.processors</groupId>
			<artifactId>taverna-notification-processor</artifactId>
			<version>1.5.1</version>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.taverna.processors</groupId>
			<artifactId>taverna-rdfgenerator-processor</artifactId>
			<version>1.5.1</version>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.taverna.processors</groupId>
			<artifactId>taverna-rserv-processor</artifactId>
			<version>1.5.1</version>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.taverna.processors</groupId>
			<artifactId>taverna-seqhound-processor</artifactId>
			<version>1.5.1</version>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.taverna.processors</groupId>
			<artifactId>taverna-soaplab-processor</artifactId>
			<version>1.5.1</version>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.taverna.processors</groupId>
			<artifactId>taverna-stringconstant-processor</artifactId>
			<version>1.5.1</version>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.taverna.processors</groupId>
			<artifactId>taverna-talisman-processor</artifactId>
			<version>1.5.1</version>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.taverna.processors</groupId>
			<artifactId>taverna-wsdl-processor</artifactId>
			<version>1.5.1</version>
		</dependency>

	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<skip>true</skip>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>start derby test db</id>
						<phase>test-compile</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<!--<echo message="Starting Apache Derby" />-->
								<java
									classname="org.apache.derby.drda.NetworkServerControl"
									fork="yes" spawn="yes" dir="target">
									<classpath
										refid="maven.test.classpath" />
									<arg line="start -p 1337" />
								</java>
								<echo message="Started Apache Derby" />
							</tasks>
						</configuration>
					</execution>
					<execution>
						<id>stop derby test db</id>
						<phase>test</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<!--<echo message="Stopping Apache Derby" />-->
								<java
									classname="org.apache.derby.drda.NetworkServerControl"
									fork="yes">
									<classpath
										refid="maven.test.classpath" />
									<arg line="shutdown -p 1337" />
								</java>
							</tasks>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
