<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>uk.org.mygrid.remotetaverna</groupId>
		<artifactId>remotetaverna</artifactId>
		<version>0.4-SNAPSHOT</version>
	</parent>
	<groupId>uk.org.mygrid.remotetaverna</groupId>
	<artifactId>taverna-engine</artifactId>
	<version>0.4-SNAPSHOT</version>
	<packaging>jar</packaging>
	<name>Taverna service backend engine</name>
	<description>
		The backend engine that taverna-wsdl communicates with through
		Raven. Queues workflows and executes them from a worker thread.
	</description>
	<dependencies>
		<!--  Standard libraries -->
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>commons-io</groupId>
			<artifactId>commons-io</artifactId>
		</dependency>
		
		<!--  Remote taverna -->
		<dependency>
			<groupId>uk.org.mygrid.remotetaverna</groupId>
			<artifactId>taverna-interface</artifactId>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.remotetaverna</groupId>
			<artifactId>taverna-rest-client</artifactId>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.remotetaverna</groupId>
			<artifactId>taverna-rest</artifactId>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.remotetaverna</groupId>
			<artifactId>taverna-datastore</artifactId>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.remotetaverna</groupId>
			<artifactId>taverna-datastore</artifactId>
			<type>test-jar</type>
			<scope>test</scope>
		</dependency>

		<!-- Core Taverna bindings -->
		<dependency>
			<groupId>uk.org.mygrid.taverna.scufl</groupId>
			<artifactId>scufl-tools</artifactId>
		</dependency>

		<!--  Taverna processors -->
		<dependency>
			<groupId>uk.org.mygrid.taverna.processors</groupId>
			<artifactId>taverna-dependency-processor</artifactId>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.taverna.processors</groupId>
			<artifactId>taverna-beanshell-processor</artifactId>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.taverna.processors</groupId>
			<artifactId>taverna-biomart-processor</artifactId>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.taverna.processors</groupId>
			<artifactId>taverna-biomoby-processor</artifactId>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.taverna.processors</groupId>
			<artifactId>taverna-inferno-processor</artifactId>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.taverna.processors</groupId>
			<artifactId>taverna-apiconsumer-processor</artifactId>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.taverna.processors</groupId>
			<artifactId>taverna-java-processor</artifactId>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.taverna.processors</groupId>
			<artifactId>taverna-localworkers</artifactId>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.taverna.processors</groupId>
			<artifactId>taverna-notification-processor</artifactId>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.taverna.processors</groupId>
			<artifactId>taverna-rdfgenerator-processor</artifactId>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.taverna.processors</groupId>
			<artifactId>taverna-rserv-processor</artifactId>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.taverna.processors</groupId>
			<artifactId>taverna-soaplab-processor</artifactId>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.taverna.processors</groupId>
			<artifactId>taverna-stringconstant-processor</artifactId>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.taverna.processors</groupId>
			<artifactId>taverna-talisman-processor</artifactId>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.taverna.processors</groupId>
			<artifactId>taverna-wsdl-processor</artifactId>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.taverna</groupId>
			<artifactId>taverna-contrib</artifactId>
		</dependency>

	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>appassembler-maven-plugin</artifactId>
				<configuration>
					<programs>
						<program>
							<mainClass>
								net.sf.taverna.service.backend.executor.RestfulExecutionProcess
							</mainClass>
							<name>worker</name>
						</program>
					</programs>
					<extraJvmArguments>-Xmx256m</extraJvmArguments>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<skip>false</skip>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>start derby test db</id>
						<phase>test-compile</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<!--<echo message="Starting Apache Derby" />-->
								<java
									classname="org.apache.derby.drda.NetworkServerControl"
									fork="yes" spawn="yes" dir="target">
									<classpath
										refid="maven.test.classpath" />
									<arg line="start -p 1337" />
								</java>
								<echo message="Started Apache Derby" />
							</tasks>
						</configuration>
					</execution>
					<execution>
						<id>stop derby test db</id>
						<phase>test</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<!--<echo message="Stopping Apache Derby" />-->
								<java
									classname="org.apache.derby.drda.NetworkServerControl"
									fork="yes">
									<classpath
										refid="maven.test.classpath" />
									<arg line="shutdown -p 1337" />
								</java>
							</tasks>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
