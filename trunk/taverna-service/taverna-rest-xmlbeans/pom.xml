<?xml version="1.0" encoding="UTF-8"?>
<project>
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>uk.org.mygrid.remotetaverna</groupId>
		<artifactId>remotetaverna</artifactId>
		<version>0.4.1</version>
	</parent>
	<groupId>uk.org.mygrid.remotetaverna</groupId>
	<artifactId>taverna-rest-xmlbeans</artifactId>
	<packaging>jar</packaging>
	<name>Taverna service REST XMLBeans bindings</name>
	<description>
        Binding of Taverna Rest XSD to XMLBeans.
	</description>
	<dependencies>
		<dependency>
			<groupId>org.apache.xmlbeans</groupId>
			<artifactId>xmlbeans</artifactId>
			<version>2.3.0</version>
		</dependency>
        
		<dependency>
			<groupId>uk.org.mygrid.remotetaverna</groupId>
			<artifactId>taverna-interface</artifactId>
			<version>0.4.1</version>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>xmlbeans-maven-plugin</artifactId>
                <version>2.3.0</version>
				<executions>
					<execution>
						<goals>
							<goal>xmlbeans</goal>
						</goals>
					</execution>
				</executions>
				<inherited>true</inherited>
				<configuration>
                    <!--
                    <outputJar>${basedir}/target/rest-xmlbeans-0.4.jar</outputJar>
                    <debug>true</debug>
                    <verbose>true</verbose>
                    -->
                    <xmlConfigs>
                        <xmlConfig
                            implementation="java.io.File">src/main/xsd/xsdconfig.xml</xmlConfig>
                    </xmlConfigs>

                    <!-- For some reason this doesn't work anymore, and
                    we have to use schemaDirectory instead.. -->
					<xsdJars>
						<xsdJar implementation="java.lang.String">
							uk.org.mygrid.remotetaverna:taverna-interface
						</xsdJar>
					</xsdJars>
                    <schemaDirectory>../taverna-interface/src/main/resources</schemaDirectory>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
