<?xml version="1.0" encoding="UTF-8"?>
<project>
	<parent>
		<artifactId>interaction-server</artifactId>
		<groupId>uk.org.mygrid.interaction</groupId>
		<version>0.6.1</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<groupId>uk.org.mygrid.interaction</groupId>
	<artifactId>interaction-server-webapp</artifactId>
	<name>Interaction Server Web Application</name>
	<packaging>war</packaging>
	<version>0.6.1</version>
	
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>jreleaseinfo</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<taskdef
									classname="ch.oscg.jreleaseinfo.anttask.JReleaseInfoAntTask"
									name="jreleaseinfo">
									<classpath
										refid="maven.compile.classpath" />
								</taskdef>
								<jreleaseinfo
									packageName="net.sf.taverna.interaction"
									targetDir="${project.build.directory}/generated-sources/jreleaseinfo"
									project="${artifactId}" className="InteractionReleaseInfo"
									withViewer="false" version="${version}">
								</jreleaseinfo>
							</tasks>
							<sourceRoot>
								${project.build.directory}/generated-sources/jreleaseinfo
							</sourceRoot>
						</configuration>
					</execution>
				</executions>
				<dependencies>
					<dependency>
						<groupId>uk.org.mygrid.resources</groupId>
						<artifactId>jreleaseinfo</artifactId>
						<version>1.2.0</version>
					</dependency>
				</dependencies>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>uk.org.mygrid.interaction</groupId>
			<artifactId>interaction-server-plugin</artifactId>
			<version>0.6.1</version>
		</dependency>				
	</dependencies>

</project>