  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
          <skip>false</skip>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>2.2-svn-SNAPSHOT</version>
        <configuration>
          <descriptor>src/main/assembly/assembly.xml</descriptor>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>default-tools.jar</id>
      <activation>
        <property>
          <name>java.vendor</name>
          <value>Sun Microsystems Inc.</value>
        </property>
      </activation>
      <dependencies>
        <dependency>
          <groupId>com.sun</groupId>
          <artifactId>tools</artifactId>
          <version>1.4.2</version>
          <scope>system</scope>
          <systemPath>${java.home}/../lib/tools.jar</systemPath>
        </dependency>
      </dependencies>
    </profile>
    <profile>
      <id>provenance</id>
      <activation>
        <property>
          <name>provenance</name>
        </property>
      </activation>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-antrun-plugin</artifactId>
            <executions>
              <execution>
                <id>provenance</id>
                <phase>generate-resources</phase>
                <goals>
                  <goal>run</goal>
                </goals>
                <configuration>
                  <tasks>
                    <get usetimestamp="yes" src="http://twiki.mygrid.org.uk/twiki/pub/Mygrid/TavernaProvenancePlugin/provenance-1.0_02-bin.zip" dest="${project.build.directory}/provenance.zip"></get>
                    <unzip src="${project.build.directory}/provenance.zip" dest="${project.build.directory}/provenance"></unzip>
                  </tasks>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>omii-assembly</id>
      <activation>
        <property>
          <name>assembly</name>
          <value>omii</value>
        </property>
      </activation>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-assembly-plugin</artifactId>
            <version>2.1</version>
            <configuration>
              <descriptor>src/main/assembly/omii-assembly.xml</descriptor>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>omii-client-assembly</id>
      <activation>
        <property>
          <name>assembly</name>
          <value>omii-client</value>
        </property>
      </activation>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-assembly-plugin</artifactId>
            <version>2.1</version>
            <configuration>
              <descriptor>src/main/assembly/omii-client-assembly.xml</descriptor>
              <finalName>client</finalName>
              <appendAssemblyId>false</appendAssemblyId>
              <outputDirectory>${basedir}/dist</outputDirectory>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
