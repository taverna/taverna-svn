<?xml version="1.0" encoding="UTF-8"?>
<project>
  <parent>
    <artifactId>taverna</artifactId>
    <groupId>uk.org.mygrid.taverna</groupId>
    <version>1.6.2.0</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>uk.org.mygrid.taverna.raven</groupId>
  <artifactId>raven</artifactId>
  <name>Raven</name>
  <version>1.6.2.0</version>
  <dependencies> 
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.0</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>commons-io</groupId>
      <artifactId>commons-io</artifactId>
      <version>1.2</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <developers>
    <developer>
      <id>mereden</id>
      <name>Tom Oinn</name>
      <email>tmo@ebi.ac.uk</email>
      <url>http://www.ebi.ac.uk/~tmo/</url>
      <organization>European Bioinformatics Institute</organization>
      <organizationUrl>http://www.ebi.ac.uk</organizationUrl>
      <roles>
        <role>Developer</role>
      </roles>
      <timezone>0</timezone>
    </developer>
    <developer>
      <id>mpocock</id>
      <name>Matthew Pocock</name>
      <email>matthew.pocock@ncl.ac.uk</email>
      <organization>Unversity of Newcastle Upon Tyne</organization>
      <organizationUrl>http://www.ncl.ac.uk</organizationUrl>
      <roles>
        <role>Developer</role>
      </roles>
    </developer>
  </developers>
  <licenses>
    <license>
      <name>GNU Lesser General Public License</name>
      <url>http://www.gnu.org/licenses/lgpl.txt</url>
      <distribution>repo</distribution>
    </license>
  </licenses>
  <scm>
    <connection>scm:cvs:pserver:anonymous@taverna.cvs.sourceforge.net:/cvsroot/taverna:taverna1.0</connection>
    <url>http://taverna.cvs.sourceforge.net/taverna/taverna1.0/</url>
  </scm> 
  <organization>
    <name>European Bioinformatics Institute</name>
    <url>http://www.ebi.ac.uk</url>
  </organization>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <archive>
            <manifest>
              <mainClass>net.sf.taverna.raven.Raven</mainClass>
            </manifest>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>2.2-svn-SNAPSHOT</version>
        <configuration>
          <descriptor>src/main/assembly/assembly.xml</descriptor>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
