<?xml version="1.0" encoding="UTF-8"?>
<project>
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>uk.org.mygrid.tavernaservice</groupId>
		<artifactId>tavernaservice</artifactId>
		<version>1.0.0</version>
	</parent>
	<groupId>uk.org.mygrid.tavernaservice</groupId>
	<artifactId>taverna-rest-xmlbeans</artifactId>
	<packaging>jar</packaging>
	<name>Taverna service REST XMLBeans bindings</name>
	<description>
        Binding of Taverna Rest XSD to XMLBeans.
	</description>
	<dependencies>
		<dependency>
			<groupId>xmlbeans</groupId>
			<artifactId>xbean</artifactId>
			<version>2.2.0</version>
		</dependency>
		<dependency><!--  What is the licence of this artefact? Is it really needed? -->
			<groupId>xmlbeans</groupId>
			<artifactId>xmlbeans-jsr173-api</artifactId>
			<version>2.0-dev</version>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.tavernaservice</groupId>
			<artifactId>taverna-interface</artifactId>
			<version>1.0.0</version>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>xmlbeans-maven-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>xmlbeans</goal>
						</goals>
					</execution>
				</executions>
				<inherited>true</inherited>
				<configuration>
                    <outputJar>${basedir}/target/rest-xmlbeans-0.4.jar</outputJar>
					<xsdJars>
						<xsdJar implementation="java.lang.String">
							uk.org.mygrid.tavernaservice:taverna-interface
						</xsdJar>
					</xsdJars>
                    <xmlConfigs>
                        <xmlConfig
                            implementation="java.io.File">src/main/xsd/xsdconfig.xml</xmlConfig>
                    </xmlConfigs>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
