<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>net.sf.taverna.matlabactivity.matserver</groupId>
        <artifactId>mat-server</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>
    <groupId>net.sf.taverna.matlabactivity.matserver</groupId>
    <artifactId>mat-server-java</artifactId>
    <name>MatServer java</name>
    <packaging>jar</packaging>
    <description>Java part of MatServer.</description>
    <dependencies>
        <dependency>
            <groupId>org.codehaus.xfire</groupId>
            <artifactId>xfire-java5</artifactId>
            <version>1.2.2</version>
        </dependency>
        <dependency>
            <groupId>org.mortbay.jetty</groupId>
            <artifactId>jetty</artifactId>
            <version>5.1.11</version>
        </dependency>
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>servlet-api</artifactId>
            <version>2.4</version>
        </dependency>
        <dependency>
            <groupId>net.sf.taverna.matlabactivity.matserver</groupId>
            <artifactId>mat-server-api</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>
    </dependencies>
    <build>
        <directory>../target</directory>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.0.2</version>
                <configuration>
                    <source>1.5</source>
                    <target>1.5</target>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <properties>
        <matlabroot>C:\MATLAB6p5</matlabroot>
    </properties>
    <profiles>
        <profile>
            <id>win32</id>
            <activation>
                <property>
                    <name>platform</name>
                    <value>win32</value>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <forkMode>once</forkMode>
                            <environmentVariables>
                                <path>${project.build.directory};${java.library.path}</path>
                            </environmentVariables>
                            <workingDirectory>${project.build.directory}</workingDirectory>
                            <argLine>-Djava.library.path="${project.build.directory};${matlabroot}\bin\win32;${java.library.path}"</argLine>
                        </configuration>
                    </plugin>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <version>1.1</version>
                        <executions>
                            <execution><!--TODO lifecycle phase-->
                                <phase></phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <workingDirectory>${project.build.directory}</workingDirectory>
                            <executable>C:\Program Files\Java\jdk1.6.0_10\bin\java.exe</executable>
                            <arguments>
                                <argument>-Djava.library.path=${project.build.directory};${matlabroot}\bin\win32;${java.library.path}</argument>
                                <argument>-classpath</argument>
                                <classpath/>
                                <argument>net.sf.taverna.matserver.Application</argument>
                            </arguments>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>linux</id>
            <activation>
                <property>
                    <name>platform</name>
                    <value>linux</value>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <forkMode>once</forkMode>
                            <environmentVariables>
                                <path>${project.build.directory};${java.library.path}</path>
                            </environmentVariables>
                            <workingDirectory>${project.build.directory}</workingDirectory>
                            <argLine>-Djava.library.path="${project.build.directory};${matlabroot}\bin\glnx86;${java.library.path}"</argLine>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
