<!-- Example patterns.xml file for testing purposes, none -->
<!-- of these patterns are actually implemented yet.      -->
<!-- To test the Taverna plugin you should put this file  -->
<!-- on the web somewhere then point the scavenger at the -->
<!-- URL of the server directory containing it, you       -->
<!-- should be able to create processors matching the     -->
<!-- pattern definitions below.                           -->
<patterns>
  <pattern name="bio.EditAlignment">
    <description>Edit a set of sequences into an alignment 
    with Artemis</description>
    <input name="sequences" type="l('text/plain')"/>
    <output name="alignment" type="'text/plain'"/>
  </pattern>
  <pattern name="bio.AcceptOrRejectStructure">
    <description>Accept or reject a 3d structure</description>
    <input name="structure" type="'chemical/x-pdb'"/>
  </pattern>
  <pattern name="generic.ListSubset">
    <description>Pick a subset of the input list</description>
    <input name="input" type="l('text/plain')"/>
    <output name="filtered" type="l('text/plain')"/>
  </pattern>
</patterns>