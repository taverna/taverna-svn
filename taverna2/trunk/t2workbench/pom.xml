<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>net.sf.taverna.t2</groupId>
	<artifactId>t2-workbench</artifactId>
	<version>0.3-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>Taverna 2 workbench</name>
	<description>The encapsulating workbench for Taverna 2</description>
	<parent>
		<artifactId>parent</artifactId>
		<groupId>net.sf.taverna</groupId>
		<version>0.1.2008-10-27</version>
	</parent>
	<properties>
		<t2.platform.version>0.3-SNAPSHOT</t2.platform.version>
		<t2.reference.version>0.3-SNAPSHOT</t2.reference.version>
		<t2.reference.ui.version>0.4-SNAPSHOT</t2.reference.ui.version>
		<t2.core.version>0.5-SNAPSHOT</t2.core.version>
		<t2.workbench.version>0.3-SNAPSHOT</t2.workbench.version>
		<t2.workbench.perspective.version>1.10-SNAPSHOT</t2.workbench.perspective.version>

		<t2.ui.version>0.5-SNAPSHOT</t2.ui.version>
		<t2.io.version>0.5-SNAPSHOT</t2.io.version>
		<t2.observer.version>0.5-SNAPSHOT</t2.observer.version>
		<t2.partition.version>0.5-SNAPSHOT</t2.partition.version>
		<t2.spidiscovery.version>0.5-SNAPSHOT</t2.spidiscovery.version>
		<raven.version>1.10-SNAPSHOT</raven.version>
		<raven.launcher.version>1.10-SNAPSHOT</raven.launcher.version>
		<plugin.manager.version>1.10-SNAPSHOT</plugin.manager.version>
		<t2.security.version>0.3-SNAPSHOT</t2.security.version>

		<taverna.version>1.7.2.1-SNAPSHOT</taverna.version>

		<!--
			Note: Because of build/deploy order this must be the PREVIOUS version
			of t2 activities
		-->
		<t2.activities.version.old>0.3</t2.activities.version.old>

	</properties>
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-clover-plugin</artifactId>
				<executions>
					<execution>
						<phase>pre-site</phase>
						<goals>
							<goal>instrument</goal>
							<goal>aggregate</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<jdk>1.5</jdk>
					<targetPercentage>50%</targetPercentage>
					<failOnViolation>false</failOnViolation>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<modules>
		<module>application</module>
		<module>credential-manager-ui</module>
		<module>common-icons</module>
		<module>configuration-api</module>
		<module>configuration-impl</module>
		<module>edits-api</module>
		<module>edits-impl</module>
		<module>file-api</module>
		<module>file-impl</module>
		<module>file-translator</module>
		<module>models</module>
		<module>menu-api</module>
		<module>menu-impl</module>
		<module>perspective-core</module>
		<module>perspective-design</module>
		<module>design-ui</module>
		<module>run-ui</module>
		<module>ui-api</module>
		<module>ui-impl</module>
		<module>contextual-views-api</module>
		<module>contextual-views-impl</module>
		<module>helper</module>
		<module>activity-palette-api</module>
		<module>activity-palette-impl</module>
		<module>activity-palette-ui</module>
		<module>views</module>
		<module>perspective-results</module>
		<module>httpproxy-config</module>
		<module>reference-config</module>
		<module>iteration-strategy-ui</module>
		<module>workflow-explorer</module>
		<module>provenance-config</module>
		<module>update-manager</module>
		<module>activity-icons</module>
	</modules>
	<repositories>
		<repository>
			<releases />
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
			<id>mygrid-repository</id>
			<name>myGrid Repository</name>
			<url>http://www.mygrid.org.uk/maven/repository</url>
		</repository>
		<repository>
			<releases>
				<enabled>false</enabled>
			</releases>
			<snapshots />
			<id>mygrid-snapshot-repository</id>
			<name>myGrid Snapshot Repository</name>
			<url>
				http://www.mygrid.org.uk/maven/snapshot-repository
			</url>
		</repository>
		<repository>
			<releases />
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
			<id>restlet</id>
			<name>Restlet repository</name>
			<url>http://maven.restlet.org</url>
		</repository>
		<repository>
			<releases />
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
			<id>mygrid-mirror</id>
			<name>myGrid maven proxy server</name>
			<url>http://www.mygrid.org.uk/maven/proxy/repository</url>
		</repository>
	</repositories>
	<reporting>
		<plugins>
			<plugin>
				<artifactId>maven-checkstyle-plugin</artifactId>
				<configuration>
					<configLocation>
						${basedir}/../checkstyle.xml
					</configLocation>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-clover-plugin</artifactId>
				<configuration>
					<generatePdf>true</generatePdf>
					<generateXml>true</generateXml>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-javadoc-plugin</artifactId>
				<configuration>
					<minmemory>128m</minmemory>
					<maxmemory>512</maxmemory>
					<aggregate>true</aggregate>
					<links>
						<link>
							http://www.mygrid.org.uk/taverna/api/
						</link>
						<link>
							http://java.sun.com/j2se/1.5.0/docs/api/
						</link>
					</links>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<systemProperties>
						<property>
							<name>java.awt.headless</name>
							<value>true</value>
						</property>
					</systemProperties>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>jxr-maven-plugin</artifactId>
			</plugin>
		</plugins>
	</reporting>
	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>junit</groupId>
				<artifactId>junit</artifactId>
				<version>4.4</version>
				<scope>test</scope>
			</dependency>
			<dependency>
				<groupId>jdom</groupId>
				<artifactId>jdom</artifactId>
				<version>1.0</version>
			</dependency>
			<dependency>
				<groupId>log4j</groupId>
				<artifactId>log4j</artifactId>
				<version>1.2.13</version>
			</dependency>
			<dependency>
				<groupId>commons-io</groupId>
				<artifactId>commons-io</artifactId>
				<version>1.3</version>
			</dependency>
			<dependency>
				<groupId>commons-httpclient</groupId>
				<artifactId>commons-httpclient</artifactId>
				<version>3.1</version>
			</dependency>
			<dependency>
				<groupId>commons-lang</groupId>
				<artifactId>commons-lang</artifactId>
				<version>2.4</version>
			</dependency>
			<dependency>
				<groupId>commons-codec</groupId>
				<artifactId>commons-codec</artifactId>
				<version>1.3</version>
			</dependency>
			
			<dependency>
				<groupId>commons-cli</groupId>
				<artifactId>commons-cli</artifactId>
				<version>1.0</version>
			</dependency>
			<dependency>
				<groupId>commons-configuration</groupId>
				<artifactId>commons-configuration</artifactId>
				<version>1.5</version>
			</dependency>
			<dependency>
				<groupId>commons-io</groupId>
				<artifactId>commons-io</artifactId>
				<version>1.3.1</version>
			</dependency>
			<dependency>
				<groupId>commons-collections</groupId>
				<artifactId>commons-collections</artifactId>
				<version>3.2</version>
			</dependency>
			<dependency>
				<groupId>javax.help</groupId>
				<artifactId>javahelp</artifactId>
				<version>2.0.02</version>
			</dependency>
			<dependency>
				<groupId>uk.org.mygrid.taverna</groupId>
				<artifactId>osxapplication</artifactId>
				<version>1.5.1</version>
			</dependency>
			<dependency>
				<groupId>uk.org.mygrid.taverna.processors</groupId>
				<artifactId>all</artifactId>
				<version>${taverna.version}</version>
				<exclusions>
					<exclusion>
						<groupId>uk.org.mygrid.taverna.raven
						</groupId>
						<artifactId>raven</artifactId>
					</exclusion>
					<exclusion>
						<groupId>uk.org.mygrid.taverna.raven
						</groupId>
						<artifactId>raven-log4j</artifactId>
					</exclusion>
				</exclusions>
			</dependency>
			<dependency>
				<groupId>uk.org.mygrid.taverna</groupId>
				<artifactId>taverna-contrib</artifactId>
				<version>${taverna.version}</version>
				<exclusions>
					<exclusion>
						<groupId>uk.org.mygrid.taverna.raven
						</groupId>
						<artifactId>raven</artifactId>
					</exclusion>
					<exclusion>
						<groupId>uk.org.mygrid.taverna.raven
						</groupId>
						<artifactId>raven-log4j</artifactId>
					</exclusion>
				</exclusions>
			</dependency>
			<dependency>
				<groupId>jmimemagic</groupId>
				<artifactId>jmimemagic</artifactId>
				<version>0.1.2</version>
			</dependency>
		</dependencies>
		
	</dependencyManagement>
</project>
