<?xml version="1.0" encoding="UTF-8"?>
<project>
	<modelVersion>4.0.0</modelVersion>
	<groupId>net.sf.taverna.t2.workbench</groupId>
	<artifactId>application</artifactId>
	<name>Taverna Workbench Application</name>
	<parent>
		<groupId>net.sf.taverna.t2</groupId>
		<artifactId>t2-workbench</artifactId>
		<version>0.3-SNAPSHOT</version>
	</parent>
	<description>The workbench application</description>
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<descriptors>
						<descriptor>
							src/main/assembly/assembly.xml
						</descriptor>
					</descriptors>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>commons-httpclient</groupId>
			<artifactId>commons-httpclient</artifactId>
		</dependency>
		<dependency>
			<groupId>jdom</groupId>
			<artifactId>jdom</artifactId>
		</dependency>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.taverna.raven</groupId>
			<artifactId>appconfig</artifactId>
			<version>${raven.version}</version>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.taverna.raven</groupId>
			<artifactId>launcher-api</artifactId>
			<version>${raven.version}</version>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.taverna.raven</groupId>
			<artifactId>launcher</artifactId>
			<version>${raven.launcher.version}</version>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.taverna.raven</groupId>
			<artifactId>plugins-api</artifactId>
			<version>${raven.version}</version>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.taverna.raven</groupId>
			<artifactId>prelauncher</artifactId>
			<version>${raven.version}</version>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.taverna.raven</groupId>
			<artifactId>raven</artifactId>
			<version>${raven.version}</version>
		</dependency>
		<dependency>
			<groupId>net.sf.taverna.t2.workbench</groupId>
			<artifactId>reference-config</artifactId>
			<version>${t2.workbench.version}</version>
		</dependency>		
		<dependency>
			<groupId>net.sf.taverna.t2</groupId>
			<artifactId>platform</artifactId>
			<version>${t2.platform.version}</version>
		</dependency>
		<dependency>
			<groupId>net.sf.taverna.t2</groupId>
			<artifactId>t2reference-api</artifactId>
			<version>${t2.reference.version}</version>
		</dependency>
		
	</dependencies>
	
