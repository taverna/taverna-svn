<deployment-descriptor xmlns="http://www.ibm.com/LSID/Standard/rsdl">
	<maps>
		<map name="taverna-main">
			<pattern auth="net.sf.taverna" ns="*" />
		</map>
	</maps>
	<services>
		<service name="TavernaLSIDService">
			<params>
				<!-- The class for the data access layer, leave for now -->
				<param name="taverna.datastore.class">org.embl.ebi.escience.baclava.store.JDBCBaclavaDataService</param>
				<!-- The jdbc driver class, this is the default for mySQL and is included -->
				<param name="taverna.datastore.jdbc.driver">com.mysql.jdbc.Driver</param>
				<!-- The connection URL, the default assumes that you're using the local host -->
				<param name="taverna.datastore.jdbc.url">jdbc:mysql://localhost/taverna</param>
				<!-- Max number of connections, set to zero for unlimited -->
				<param name="taverna.datastore.jdbc.pool.max">0</param>
				<!-- User name and password for the data store -->
				<param name="taverna.datastore.jdbc.user">taverna</param>
				<param name="taverna.datastore.jdbc.password">taverna</param>
			</params>
			<components>
				<auth map="taverna-main" type="class">org.embl.ebi.escience.ouzo.TavernaLSIDService</auth>
				<meta map="taverna-main" type="class">org.embl.ebi.escience.ouzo.TavernaLSIDService</meta>
				<data map="taverna-main" type="class">org.embl.ebi.escience.ouzo.TavernaLSIDService</data>
			</components>
		</service>
	</services>
</deployment-descriptor>
