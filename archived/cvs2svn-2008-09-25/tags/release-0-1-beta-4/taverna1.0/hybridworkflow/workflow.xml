<?xml version="1.0" encoding="iso-8859-1" ?> 
<s:scufl xmlns:s="http://org.embl.ebi.escience/xscufl/0.1alpha" version="0.1" log="3">

  <!-- Test the constraint definition -->
  <s:coordination name="testcoordination">
    <s:condition>
      <s:target>restrict_mutant</s:target>
      <s:state>COMPLETED</s:state>
    </s:condition>
    <s:action>
      <s:target>compare</s:target>
      <s:statechange>
        <s:from>SCHEDULED</s:from>
        <s:to>RUNNING</s:to>
      </s:statechange>
    </s:action>
  </s:coordination>

  <!-- Compare two restrict outputs -->
  <s:processor name="compare">
    <s:talisman>
      <s:tscript>http://www.cyclonic.org/workflow/tscript_compare_restrict.xml</s:tscript>
    </s:talisman>
  </s:processor>

  <!-- Apply restrict to mutant sequence -->
  <s:processor name="restrict_mutant">
    <s:soaplabwsdl>http://industry.ebi.ac.uk/soap/soaplab/nucleic_restriction::restrict</s:soaplabwsdl>
  </s:processor>

  <!-- Link the output of the two restrict reports into the comparison -->
  <s:link>
    <s:input>compare:report1</s:input>
    <s:output>restrictGetResults:get_outfileReturn</s:output>
  </s:link>
  <s:link>
    <s:input>compare:report2</s:input>
    <s:output>restrict_mutant:outfile</s:output>
  </s:link>

  <!-- Generate mutant sequence from list of SNPs -->
  <s:processor name="create_mutant_sequence">
    <s:talisman>
      <s:tscript>http://www.cyclonic.org/workflow/tscript_create_mutant_sequence.xml</s:tscript>
    </s:talisman>
  </s:processor>

  <!-- read the sequence and list of SNPs from external inputs -->
  <s:source>sequence</s:source>
  <s:source>snplist</s:source>
  <s:link>
    <s:output>snplist</s:output>
    <s:input>create_mutant_sequence:snplist</s:input>
  </s:link>
  <s:link>
    <s:output>sequence</s:output>
    <s:input>create_mutant_sequence:sequence</s:input>
  </s:link>

  <s:sink>report</s:sink>
  <s:link>
    <s:output>compare:output</s:output>
    <s:input>report</s:input>
  </s:link>

  <!-- copy the mutant sequence and the original one to the restrict outputs -->
  <s:link>
    <s:input>restrict_mutant:sequence_direct_data</s:input>
    <s:output>create_mutant_sequence:mutantsequence</s:output>
  </s:link>

  <s:processor name="restrictCreateJob">
  <s:arbitrarywsdl>
  <s:wsdl>http://industry.ebi.ac.uk/soaplab/wsdl/nucleic_restriction__restrict__derived.wsdl</s:wsdl>
  <s:porttype>nucleic_restriction__restrict</s:porttype>
  <s:operation>createEmptyJob</s:operation>
  </s:arbitrarywsdl>
  </s:processor>

  <s:link>
  <s:input>restrictSetInput1:jobId</s:input>
  <s:output>restrictCreateJob:createEmptyJobReturn</s:output>
  </s:link>

  <s:link>
  <s:input>restrictSetInput1:value</s:input>
  <s:output>sequence</s:output>
  </s:link>

  <s:processor name="restrictSetInput1">
  <s:arbitrarywsdl>
  <s:wsdl>http://industry.ebi.ac.uk/soaplab/wsdl/nucleic_restriction__restrict__derived.wsdl</s:wsdl>
  <s:porttype>nucleic_restriction__restrict</s:porttype>
  <s:operation>set_sequence_direct_data</s:operation>
  </s:arbitrarywsdl>
  </s:processor>
  
  <s:link>
  <s:input>restrictRun:in0</s:input>
  <s:output>restrictCreateJob:createEmptyJobReturn</s:output>
  </s:link>

  <s:processor name="restrictRun">
  <s:arbitrarywsdl>
  <s:wsdl>http://industry.ebi.ac.uk/soaplab/wsdl/nucleic_restriction__restrict__derived.wsdl</s:wsdl>
    <s:porttype>nucleic_restriction__restrict</s:porttype>
    <s:operation>run</s:operation>
  </s:arbitrarywsdl>
  </s:processor>

  <s:link>
  <s:input>restrictWait:in0</s:input>
  <s:output>restrictCreateJob:createEmptyJobReturn</s:output>
  </s:link>

  <s:processor name="restrictWait">
  <s:arbitrarywsdl>
  <s:wsdl>http://industry.ebi.ac.uk/soaplab/wsdl/nucleic_restriction__restrict__derived.wsdl</s:wsdl>
    <s:porttype>nucleic_restriction__restrict</s:porttype>
    <s:operation>waitFor</s:operation>
  </s:arbitrarywsdl>
  </s:processor>

  <s:link>
  <s:input>restrictGetResults:jobId</s:input>
  <s:output>restrictCreateJob:createEmptyJobReturn</s:output>
  </s:link>

  <s:processor name="restrictGetResults">
  <s:arbitrarywsdl>
  <s:wsdl>http://industry.ebi.ac.uk/soaplab/wsdl/nucleic_restriction__restrict__derived.wsdl</s:wsdl>
  <s:porttype>nucleic_restriction__restrict</s:porttype>
  <s:operation>get_outfile</s:operation>
  </s:arbitrarywsdl>
  </s:processor>
  
  <s:link>
  <s:input>restrictDeleteJob:in0</s:input>
  <s:output>restrictCreateJob:createEmptyJobReturn</s:output>
  </s:link>

  <s:processor name="restrictDeleteJob">
  <s:arbitrarywsdl>
  <s:wsdl>http://industry.ebi.ac.uk/soaplab/wsdl/nucleic_restriction__restrict__derived.wsdl</s:wsdl>
  <s:porttype>nucleic_restriction__restrict</s:porttype>
  <s:operation>destroy</s:operation>
  </s:arbitrarywsdl>
  </s:processor>

  <s:coordination name="setInput1">
  <s:condition>
  <s:target>restrictCreateJob</s:target>
  <s:state>COMPLETED</s:state>
  </s:condition>
  <s:action>
  <s:target>restrictSetInput1</s:target>
  <s:statechange>
  <s:from>SCHEDULED</s:from>
  <s:to>RUNNING</s:to>
  </s:statechange>
  </s:action>
  </s:coordination>

  <s:coordination name="waitForInput1">
  <s:condition>
  <s:target>restrictSetInput1</s:target>
  <s:state>COMPLETED</s:state>
  </s:condition>
  <s:action>
  <s:target>restrictRun</s:target>
  <s:statechange>
  <s:from>SCHEDULED</s:from>
  <s:to>RUNNING</s:to>
  </s:statechange>
  </s:action>
  </s:coordination>

  <s:coordination name="waitForExecution">
  <s:condition>
  <s:target>restrictRun</s:target>
  <s:state>COMPLETED</s:state>
  </s:condition>
  <s:action>
  <s:target>restrictWait</s:target>
  <s:statechange>
  <s:from>SCHEDULED</s:from>
  <s:to>RUNNING</s:to>
  </s:statechange>
  </s:action>
  </s:coordination>

  <s:coordination name="getResults">
  <s:condition>
  <s:target>restrictWait</s:target>
  <s:state>COMPLETED</s:state>
  </s:condition>
  <s:action>
  <s:target>restrictGetResults</s:target>
  <s:statechange>
  <s:from>SCHEDULED</s:from>
  <s:to>RUNNING</s:to>
  </s:statechange>
  </s:action>
  </s:coordination>

  <s:coordination name="cleanup">
  <s:condition>
  <s:target>restrictGetResults</s:target>
  <s:state>COMPLETED</s:state>
  </s:condition>
  <s:action>
  <s:target>restrictDeleteJob</s:target>
  <s:statechange>
  <s:from>SCHEDULED</s:from>
  <s:to>RUNNING</s:to>
  </s:statechange>
  </s:action>
  </s:coordination>

</s:scufl>