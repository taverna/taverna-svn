      <groupId>uk.org.mygrid.tavernaservice</groupId>
      <artifactId>tavernaservice</artifactId>
      <version>1.0.0</version>
  </parent>
  <groupId>uk.org.mygrid.tavernaservice</groupId>
  <artifactId>taverna-wsdl</artifactId>
  <packaging>war</packaging>
  <name>Taverna service WSDL wrapper</name>
  <description>
    WSDL frontend for the Taverna backend provided by taverna-engine. 
    Initialises taverna-engine using Raven, and proxy through relevant
    calls such as runWorkflow and jobStatus.
  </description>
  <build>
    <plugins>
      <!--plugin>
        <groupId>org.apache.axis2.maven2</groupId>
        <artifactId>axis2-java2wsdl-maven-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>java2wsdl</goal>
            </goals>
          </execution>
        </executions>
