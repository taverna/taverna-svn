<?xml version="1.0" encoding="UTF-8"?>
<project>
	<modelVersion>4.0.0</modelVersion>
	<groupId>uk.org.mygrid.remotetaverna</groupId>
	<artifactId>remotetaverna</artifactId>
	<packaging>pom</packaging>
	<version>0.4.1</version>
	<name>Remote Taverna execution</name>
	<description>Remote Taverna execution service</description>
	<issueManagement>
		<system>jira</system>
		<url>http://www.mygrid.org.uk/jira/</url>
	</issueManagement>
	<ciManagement>
		<system>continuum</system>
		<url>http://www.mygrid.org.uk/continuum/</url>
	</ciManagement>
	<mailingLists>
		<mailingList>
			<name>Taverna hackers</name>
			<subscribe>
				https://lists.sourceforge.net/lists/listinfo/taverna-hackers
			</subscribe>
			<post>taverna-hackers@lists.sourceforge.net</post>
			<archive>
				http://sourceforge.net/mailarchive/forum.php?forum=taverna-hackers
			</archive>
		</mailingList>
		<mailingList>
			<name>Taverna users</name>
			<subscribe>
				https://lists.sourceforge.net/lists/listinfo/taverna-users
			</subscribe>
			<post>taverna-users@lists.sourceforge.net</post>
			<archive>
				http://sourceforge.net/mailarchive/forum.php?forum=taverna-users
			</archive>
		</mailingList>
	</mailingLists>
	<developers>
		<developer>
			<id>stain</id>
			<name>Stian Soiland</name>
			<email>ssoiland@cs.man.ac.uk</email>
			<url>http://www.cs.man.ac.uk/~ssoiland/</url>
			<organization>University of Manchester</organization>
			<organizationUrl>
				http://www.manchester.ac.uk/
			</organizationUrl>
			<roles>
				<role>Developer</role>
			</roles>
			<timezone>0</timezone>
		</developer>
		<developer>
			<id>sowen</id>
			<name>Stuart Owen</name>
			<email>stuart.owen@manchester.ac.uk</email>
			<url>http://www.cs.man.ac.uk/~sowen/</url>
			<organization>University of Manchester</organization>
			<organizationUrl>
				http://www.manchester.ac.uk/
			</organizationUrl>
			<roles>
				<role>Developer</role>
			</roles>
			<timezone>0</timezone>
		</developer>
	</developers>
	<licenses>
		<license>
			<name>GNU Lesser General Public License</name>
			<url>http://www.gnu.org/licenses/lgpl.txt</url>
			<distribution>repo</distribution>
		</license>
	</licenses>
	<scm>
		<connection>
			scm:cvs:pserver:anonymous@taverna.cvs.sourceforge.net:/cvsroot/taverna:taverna-service
		</connection>
		<url>
			http://taverna.cvs.sourceforge.net/taverna/taverna-service/
		</url>
	</scm>
	<organization>
		<name>myGrid</name>
		<url>http://www.mygrid.org.uk/</url>
	</organization>
	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>tomcat-maven-plugin</artifactId>
				<configuration>
					<server>tomcat</server>
					<!--warFile>path/to/my/warFile.war</warFile-->
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<skip>false</skip>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<repositories>
		<repository>
			<id>Codehaus Snapshots</id>
			<url>http://snapshots.repository.codehaus.org/</url>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
			<releases>
				<enabled>true</enabled>
			</releases>
		</repository>
		<repository>
			<id>apache</id>
			<name>Apache repository</name>
			<url>http://www.apache.org/dist/maven-repository</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
			<releases>
				<enabled>true</enabled>
			</releases>
		</repository>
		<repository>
			<id>restlet</id>
			<name>Restlet repository</name>
			<url>http://maven.restlet.org</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
			<releases>
				<enabled>true</enabled>
			</releases>
		</repository>
		<repository>
			<id>mygrid-repository</id>
			<name>myGrid repository</name>
			<url>http://www.mygrid.org.uk/maven/repository</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
			<releases>
				<enabled>true</enabled>
			</releases>
		</repository>
		<repository>
			<id>mygrid-snapshot-repository</id>
			<name>myGrid Snapshot repository</name>
			<url>
				http://www.mygrid.org.uk/maven/snapshot-repository
			</url>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
			<releases>
				<enabled>false</enabled>
			</releases>
		</repository>
	</repositories>
	<pluginRepositories>
		<pluginRepository>
			<id>Apache m2</id>
			<url>http://www.apache.org/dist/maven-repository</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
			<releases>
				<enabled>true</enabled>
			</releases>
		</pluginRepository>
		<pluginRepository>
			<id>Codehaus Snapshots</id>
			<url>http://snapshots.repository.codehaus.org/</url>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
			<releases>
				<enabled>true</enabled>
			</releases>
		</pluginRepository>
	</pluginRepositories>
	<distributionManagement>
		<!-- use the following if you're not using a snapshot version. -->
		<repository>
			<id>mygrid-repository</id>
			<name>myGrid repository</name>
			<url>
				scpexe://phoebus.cs.man.ac.uk/disk1/maven/repository
			</url>
		</repository>
		<!-- use the following if you ARE using a snapshot version. -->
		<snapshotRepository>
			<id>mygrid-snapshot-repository</id>
			<name>myGrid Snapshot repository</name>
			<url>
				scpexe://phoebus.cs.man.ac.uk/disk1/maven/snapshot-repository
			</url>
		</snapshotRepository>
		<site>
			<id>test-site</id>
			<name>test-site</name>
			<url>file:///</url>
		</site>
	</distributionManagement>
	<modules>
		<module>taverna-interface</module>
		<module>taverna-datastore</module>
		<module>taverna-engine</module>
		<module>taverna-rest</module>
		<module>taverna-rest-xmlbeans</module>
		<module>taverna-rest-client</module>
		<module>taverna-service</module>
		<module>execute-remotely-plugin</module>
	</modules>
</project>
