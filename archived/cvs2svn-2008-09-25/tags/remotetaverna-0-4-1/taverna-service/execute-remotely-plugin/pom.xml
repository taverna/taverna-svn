<?xml version="1.0" encoding="UTF-8"?>
<project>
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>uk.org.mygrid.remotetaverna</groupId>
		<artifactId>remotetaverna</artifactId>
		<version>0.4.1</version>
	</parent>
	<groupId>uk.org.mygrid.remotetaverna</groupId>
	<artifactId>execute-remotely-plugin</artifactId>
	<packaging>jar</packaging>
	<name>Execute remotely plugin for Taverna</name>
	<description>
		Plugin for Taverna that allows submission of workflows for
		execution on a remote server running taverna-wsdl.
	</description>

	<pluginRepositories>
		<pluginRepository>
			<releases>
				<enabled>false</enabled>
			</releases>
			<snapshots />
			<id>Maven Snapshots</id>
			<url>http://snapshots.maven.codehaus.org/maven2/</url>
		</pluginRepository>
	</pluginRepositories>
	<dependencies>
		<dependency>
			<groupId>uk.org.mygrid.taverna</groupId>
			<artifactId>taverna-workbench</artifactId>
			<version>1.5.2.0</version>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.remotetaverna</groupId>
			<artifactId>taverna-rest-client</artifactId>
            <version>0.4.1</version>
		</dependency>
	</dependencies>


</project>
