<?xml version="1.0" encoding="iso-8859-1" ?>
<talisman>

  <page name="libraries used by the talisman processors">
	
    <!-- fields for the tscript_compare_restrict.xml -->
    <field type="ServerSide" name="restrictreport1" value=""/>
    <field type="ServerSide" name="restrictreport2" value=""/>
    <field type="ServerSide" name="comparison" value=""/>

    <!-- trigger to compare the restriction digests -->
    <trigger name="compare_restrict">
      <action name="compare" class="bio.CompareRestrictDigests" depends="Restrict,Restrict_SNP">
        <actionparameter name="control">field:restrictreport1</actionparameter>
	<actionparameter name="input">field:restrictreport2</actionparameter>
	<actionparameter name="output">field:comparison</actionparameter>
      </action>
    </trigger>

    <!-- fields for the mutant sequence generator -->
    <field type="ServerSide" name="inputsequence" value=""/>
    <field type="ServerSide" name="snplist" value=""/>
    <field type="ServerSide" name="mutantsequence" value=""/>
 
    <!-- trigger to generate the mutant sequence -->
    <trigger name="create_mutant_sequence">
      <action name="create_polymorphisms" class="bio.ComputeSNPVariations">
	<actionparameter name="source">field:inputsequence</actionparameter>
	<actionparameter name="locationlist">field:snplist</actionparameter>
	<actionparameter name="snp">field:mutantsequence</actionparameter>
      </action>
    </trigger>
  
  </page>

</talisman>
