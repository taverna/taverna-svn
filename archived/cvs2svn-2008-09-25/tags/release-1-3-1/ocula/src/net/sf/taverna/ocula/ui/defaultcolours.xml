<colours>
  <!-- Colour used as the base for a graduated fill in the main window -->
  <colour name="ocula.background" red="150" blue="255" green="150"/>
  <!-- Colour used for the frame around each set of results from a method -->
  <colour name="ocula.panelborder" red="50" blue="155" green="50"/>
  <!-- Colour used for the background of the result frame -->
  <colour name="ocula.panelbackground" red="245" blue="255" green="245"/>
  <!-- Colour for the title of the result frames -->
  <colour name="ocula.panelforeground" red="255" blue="255" green="255"/>
  <!-- Colour for the title and border of the context menus -->
  <colour name="ocula.contextborder" red="30" blue="115" green="30"/>
  <!-- Colour for the background of the context menus -->
  <colour name="ocula.contextbackground" red="245" blue="255" green="245"/>
  <!-- Colour for the title text for the context menu -->
  <colour name="ocula.contextforeground" red="255" blue="255" green="255"/>
</colours>