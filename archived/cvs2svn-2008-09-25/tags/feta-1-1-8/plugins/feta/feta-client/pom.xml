<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>uk.org.mygrid.feta</groupId>
		<artifactId>feta</artifactId>
		<version>1.1.8</version>
	</parent>
	<groupId>uk.org.mygrid.feta</groupId>
	<artifactId>feta-client</artifactId>
	<name>Feta client</name>
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>2.2-svn-SNAPSHOT</version>
				<configuration>
					<descriptors>
						<descriptor>
							src/main/assembly/assembly.xml
						</descriptor>
					</descriptors>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<profiles>
		<profile>
			<id>default-tools.jar</id>
			<activation>
				<property>
					<name>java.vendor</name>
					<value>Sun Microsystems Inc.</value>
				</property>
			</activation>
			<dependencies>
				<dependency>
					<groupId>com.sun</groupId>
					<artifactId>tools</artifactId>
					<version>1.4.2</version>
					<scope>system</scope>
					<systemPath>
						${java.home}/../lib/tools.jar
					</systemPath>
				</dependency>
			</dependencies>
		</profile>
	</profiles>
	<dependencies>
		<dependency>
			<groupId>uk.org.mygrid.resources</groupId>
			<artifactId>jena-full</artifactId>
			<version>2.4</version>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.feta</groupId>
			<artifactId>feta-engine</artifactId>
			<version>1.1.8</version>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.feta</groupId>
			<artifactId>pedro</artifactId>
			<version>1.0.0</version>
		</dependency>
		<dependency>
			<groupId>biomoby.org</groupId>
			<artifactId>jmoby</artifactId>
			<version>1.2</version>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.taverna.scufl</groupId>
			<artifactId>scufl-ui-api</artifactId>
			<version>1.7.1.0</version>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.taverna.scufl</groupId>
			<artifactId>scufl-ui-api</artifactId>
			<version>1.7.1.0</version>
		</dependency>
		<dependency>
			<groupId>uk.org.mygrid.taverna.perspectives</groupId>
			<artifactId>perspective-core</artifactId>
			<version>1.7.1.0</version>
		</dependency>
		<dependency>
			<groupId>xerces</groupId>
			<artifactId>xercesImpl</artifactId>
			<version>2.6.2</version>
		</dependency>
		<dependency>
			<groupId>slide</groupId>
			<artifactId>webdavlib</artifactId>
			<version>2.0</version>
		</dependency>
		<dependency>
			<groupId>commons-httpclient</groupId>
			<artifactId>commons-httpclient</artifactId>
			<version>2.0.1</version>
		</dependency>
	</dependencies>

</project>
