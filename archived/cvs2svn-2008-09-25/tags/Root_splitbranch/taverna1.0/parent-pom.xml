<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>uk.org.mygrid</groupId>
  <artifactId>taverna</artifactId>
  <version>1.4-SNAPSHOT</version>
  <url>http://www.mygrid.org.uk</url>
  <packaging>pom</packaging>
  <name>Taverna</name>
  <modules>
    <module>.</module>
    <module>contrib</module>
    <module>launcher</module>
  </modules>
  <issueManagement>
    <system>jira</system>
    <url>http://www.mygrid.org.uk/jira</url>
  </issueManagement>
  <ciManagement>
    <system>continuum</system>
    <notifiers>
      <notifier>
        <type>mail</type>
        <configuration>
          <address>david.withers@manchester.ac.uk</address>
        </configuration>
      </notifier>
    </notifiers>
  </ciManagement>
  <mailingLists>
    <mailingList>
      <name>Taverna hackers</name>
      <subscribe>https://lists.sourceforge.net/lists/listinfo/taverna-hackers</subscribe>
      <post>taverna-hackers@lists.sourceforge.net</post>
      <archive>http://sourceforge.net/mailarchive/forum.php?forum=taverna-hackers</archive>
    </mailingList>
    <mailingList>
      <name>Taverna users</name>
      <subscribe>https://lists.sourceforge.net/lists/listinfo/taverna-users</subscribe>
      <post>taverna-users@lists.sourceforge.net</post>
      <archive>http://sourceforge.net/mailarchive/forum.php?forum=taverna-users</archive>
    </mailingList>
  </mailingLists>
  <developers>
    <developer>
      <id>witherd5</id>
      <name>David Withers</name>
      <email>david.withers@manchester.ac.uk</email>
      <url>http://www.cs.man.ac.uk/~witherd5/</url>
      <organization>University of Manchester</organization>
      <organizationUrl>http://www.manchester.ac.uk</organizationUrl>
      <roles>
        <role>Developer</role>
      </roles>
      <timezone>0</timezone>
    </developer>
  </developers>
  <licenses>
    <license>
      <name>GNU Lesser General Public License</name>
      <url>http://www.gnu.org/licenses/lgpl.txt</url>
      <distribution>repo</distribution>
    </license>
  </licenses>
  <scm>
    <connection>scm:cvs:pserver:anonymous@taverna.cvs.sourceforge.net:/cvsroot/taverna:taverna1.0</connection>
    <url>http://taverna.cvs.sourceforge.net/taverna/taverna1.0/</url>
  </scm>
  <organization>
    <name>University of Manchester</name>
    <url>http://www.manchester.ac.uk</url>
  </organization>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
        <configuration>
          <linksource>true</linksource>
          <protected>true</protected>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-site-plugin</artifactId>
        <version>2.0-beta-4</version>
      </plugin>
   </plugins>
  </build>
  <profiles>
    <profile>
      <id>default</id>
      <activation>
       <activeByDefault>true</activeByDefault>
      </activation>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-assembly-plugin</artifactId>
            <version>2.1</version>
            <configuration>
              <descriptor>src/main/assembly/assembly.xml</descriptor>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>omii</id>
      <activation>
        <property>
          <name>assembly</name>
          <value>omii</value>
        </property>
      </activation>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-assembly-plugin</artifactId>
            <version>2.1</version>
            <configuration>
              <descriptor>src/main/assembly/omii-assembly.xml</descriptor>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>omii-client</id>
      <activation>
        <property>
          <name>assembly</name>
          <value>omii-client</value>
        </property>
      </activation>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-assembly-plugin</artifactId>
            <version>2.1</version>
            <configuration>
              <descriptor>src/main/assembly/omii-client-assembly.xml</descriptor>
              <finalName>client</finalName>
              <appendAssemblyId>false</appendAssemblyId>
              <outputDirectory>${basedir}/dist</outputDirectory>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
  <!-- Ready for when the myGrid repository is set up
  <repositories>
    <repository>
      <id>mygrid-repository</id>
      <name>myGrid Repository</name>
      <url>http://www.mygrid.org.uk/maven/repository</url>
    </repository>
  </repositories>
  -->
  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>uk.org.mygrid</groupId>
        <artifactId>taverna-workbench</artifactId>
        <version>${project.version}</version>
      </dependency>
     </dependencies>
   </dependencyManagement>
  <reporting>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-project-info-reports-plugin</artifactId>
        <reportSets>
          <reportSet>
            <reports>
              <!--<report>dependencies</report>-->
              <report>project-team</report>
              <report>mailing-list</report>
              <report>cim</report>
              <report>issue-tracking</report>
              <report>license</report>
              <report>scm</report>
            </reports>
          </reportSet>
        </reportSets>
      </plugin>
      <!--
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
        <configuration>
          <linksource>true</linksource>
          <protected>true</protected>
        </configuration>
      </plugin>
      -->
      <plugin>
         <groupId>org.codehaus.mojo</groupId>
         <artifactId>taglist-maven-plugin</artifactId>
         <version>2.0-beta-1</version>
      </plugin>
   </plugins>
  </reporting>
</project>
