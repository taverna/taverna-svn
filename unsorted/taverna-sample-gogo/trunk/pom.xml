<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>uk.org.taverna</groupId>
	<artifactId>taverna-sampleapp</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<name>Sample Taverna OSGi-based application</name>
	<properties>
		<application.name>gogo</application.name>
	</properties>
	<dependencies>
		<dependency>
			<groupId>uk.org.taverna</groupId>
			<artifactId>taverna-osgi-launcher</artifactId>
			<version>0.0.1-SNAPSHOT</version>
			<classifier>app</classifier>
			<scope>provided</scope>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<!-- http://sling.apache.org/site/maven-launchpad-plugin.html -->
				<groupId>org.apache.sling</groupId>
				<artifactId>maven-launchpad-plugin</artifactId>
				<version>2.0.10</version>
				<configuration>
					<!-- The main list of bundles -->
					<bundleListFile>${basedir}/src/main/bundles/list.xml</bundleListFile>
					<additionalBundles>
						<!-- Nothing extra here for now -->
					</additionalBundles>
				</configuration>
				<executions>
					<execution>
						<id>create-bundle-jar</id>
						<goals>
							<goal>create-bundle-jar</goal>
						</goals>
						<phase>prepare-package</phase>
						<configuration>
							<!-- What are we creating, without '-bundle.jar' suffix -->
							<jarName>${application.name}</jarName>
							<!-- No Apache Sling bundles! -->
							<includeDefaultBundles>false</includeDefaultBundles>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>2.2</version>
				<executions>
					<execution>
						<id>copy-launcher</id>
						<goals>
							<goal>copy</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>uk.org.taverna</groupId>
									<artifactId>taverna-osgi-launcher</artifactId>
									<version>0.0.1-SNAPSHOT</version>
									<classifier>app</classifier>
									<destFileName>${application.name}-app.jar</destFileName>
								</artifactItem>
							</artifactItems>
							<outputDirectory>${project.build.directory}</outputDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<version>1.2</version>
				<configuration>
					<executable>java</executable>
					<arguments>
						<argument>-jar</argument>
						<argument>${project.build.directory}/${application.name}-app.jar</argument>
						<!-- Next argument only necessary with the Felix Gogo Shell -->
						<argument>-launcherWait</argument>
					</arguments>
				</configuration>
			</plugin>
			<!-- Disable unwanted things -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<version>2.4.3</version>
				<executions>
					<execution>
						<id>default-resources</id>
						<phase>none</phase>
					</execution>
					<execution>
						<id>default-testResources</id>
						<phase>none</phase>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.2</version>
				<executions>
					<execution>
						<id>default-compile</id>
						<phase>none</phase>
					</execution>
					<execution>
						<id>default-testCompile</id>
						<phase>none</phase>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.9</version>
				<executions>
					<execution>
						<id>default-test</id>
						<phase>none</phase>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.3.2</version>
				<executions>
					<execution>
						<id>default-jar</id>
						<phase>none</phase>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>