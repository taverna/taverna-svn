<?xml version='1.0' encoding='UTF-8' ?>
<portlet-app xmlns='http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd' xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance' xsi:schemaLocation='http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd' version='1.0'>
	<portlet>
		<description>Portlet for workflow selection, specifying inputs and submission to a Taverna 2 Server for execution</description>
		<portlet-name>Workflow Submission</portlet-name>
		<display-name>Workflow Submission</display-name>
		<portlet-class>net.sf.taverna.t2.portal.WorkflowSubmissionPortlet</portlet-class>
                <init-param>
                    <name>t2_server_url</name>
                    <value>http://eric.rcs.manchester.ac.uk:8080/taverna-server</value>
                </init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>VIEW</portlet-mode>
			<portlet-mode>EDIT</portlet-mode>
			<portlet-mode>HELP</portlet-mode>
		</supports>
		<resource-bundle>net.sf.taverna.t2.portal.messages</resource-bundle>
		<portlet-info>
			<title>Workflow Submission</title>
			<short-title>Workflow Submission</short-title>
		</portlet-info>
	</portlet>
</portlet-app>
