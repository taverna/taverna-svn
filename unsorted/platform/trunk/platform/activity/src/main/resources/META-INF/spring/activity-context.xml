<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="activityService" class="uk.org.taverna.platform.activity.impl.ActivityServiceImpl">
		<property name="activityFactories" ref="activityFactories" />
		<property name="edits" ref="workflowModelEdits" />
	</bean>

	<bean id="dispatchLayerService" class="uk.org.taverna.platform.dispatch.impl.DispatchLayerServiceImpl">
		<property name="dispatchLayerFactories" ref="dispatchLayerFactories" />
	</bean>

</beans>
