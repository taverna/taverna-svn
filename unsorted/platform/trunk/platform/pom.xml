<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>parent</artifactId>
		<groupId>net.sf.taverna</groupId>
		<version>0.1.2009-02-12</version>
	</parent>
	<groupId>uk.org.taverna</groupId>
	<artifactId>platform</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>Taverna Platform</name>
	<scm>
		<connection>scm:svn:http://taverna.googlecode.com/svn/taverna/platform/uk.org.taverna.platform/trunk/</connection>
		<developerConnection>scm:svn:https://taverna.googlecode.com/svn/taverna/platform/uk.org.taverna.platform/trunk/</developerConnection>
		<url>http://code.google.com/p/taverna/source/browse/#svn/taverna/platform/uk.org.taverna.platform/trunk</url>
	</scm>
	<repositories>
		<repository>
			<id>com.springsource.repository.bundles.release</id>
			<name>SpringSource Enterprise Bundle Repository - SpringSource Bundle Releases</name>
			<url>http://repository.springsource.com/maven/bundles/release</url>
		</repository>
		<repository>
			<id>com.springsource.repository.bundles.external</id>
			<name>SpringSource Enterprise Bundle Repository - External Bundle Releases</name>
			<url>http://repository.springsource.com/maven/bundles/external</url>
		</repository>
	</repositories>
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<modules>
		<module>execution</module>
		<module>run</module>
		<module>monitor</module>
		<module>execution-local</module>
		<module>integration-tests</module>
		<module>activity</module>
	</modules>
</project>