				<enabled>true</enabled>
			</snapshots>
			<id>opm</id>
			<name>opm</name>
			<url>http://openprovenance.org/java/maven-releases</url>
		</repository>
		<repository>
			<id>Jena</id>
			<url>http://openjena.org/repo/</url>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
