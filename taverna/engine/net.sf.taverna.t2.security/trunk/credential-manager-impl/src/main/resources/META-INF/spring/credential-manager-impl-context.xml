<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="credentialManager" class="net.sf.taverna.t2.security.credentialmanager.impl.CredentialManagerImpl">
		<property name="masterPasswordProviders" ref="masterPasswordProviders" />
		<property name="javaTruststorePasswordProviders" ref="javaTruststorePasswordProviders" />
		<property name="serviceUsernameAndPasswordProviders" ref="serviceUsernameAndPasswordProviders" />
		<property name="trustConfirmationProviders" ref="trustConfirmationProviders" />
	</bean>

	<bean id="askUserMasterPasswordProvider" class="net.sf.taverna.t2.security.credentialmanager.impl.AskUserMasterPasswordProvider" />

	<bean id="simpleMasterPasswordProvider" class="net.sf.taverna.t2.security.credentialmanager.impl.SimpleMasterPasswordProvider" />

	<bean id="askUserJavaTruststorePasswordProvider" class="net.sf.taverna.t2.security.credentialmanager.impl.AskUserJavaTruststorePasswordProvider" />

	<bean id="askUserServiceUsernameAndPasswordProvider" class="net.sf.taverna.t2.security.credentialmanager.impl.AskUserServiceUsernameAndPasswordProvider" />

	<bean id="askUserTrustConfirmationProvider" class="net.sf.taverna.t2.security.credentialmanager.impl.AskUserTrustConfirmationProvider" />

	<bean id="MasterPasswordProviderComparator" class="net.sf.taverna.t2.security.credentialmanager.MasterPasswordProvider$ProviderComparator" />

</beans>