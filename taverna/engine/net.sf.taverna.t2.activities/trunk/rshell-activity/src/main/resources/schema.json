{
    "$schema": "http://json-schema.org/draft-03/schema#",
    "id": "http://ns.taverna.org.uk/2010/activity/rshell.schema.json",
    "title": "Rshell activity configuration",
    "type": "object",
    "properties": {
        "@context": {
            "description": "JSON-LD context for interpreting the configuration as RDF",
            "required": true,
            "enum": ["http://ns.taverna.org.uk/2010/activity/rshell.context.json"]
        },
        "script": {
            "title": "R Script",
            "description": "The R script to be executed",
            "type": "string",
            "required": true,
            "default": ""
        },
        "connection": {
            "title": "Connection Settings",
            "description": "Settings for connecting to the R server",
            "type": "object",
            "required": true,
            "properties": {
        		"hostname": {
					"title": "Host",
        		    "description": "The host name for the R server",
		            "type": "string",
		            "required": true,
        		    "default": "localhost"
        		},
        		"port": {
					"title": "Port",
        		    "description": "The port number for the R server",
		            "type": "integer",
		            "minimum" : 0,
		            "maximum" : 65535,
		            "required": true,
        		    "default": "6311"
        		},
         		"username": {
					"title": "Username",
        		    "description": "The username to connect with",
		            "type": "string",
		            "required": true,
        		    "default": ""
        		},
         		"password": {
					"title": "Password",
        		    "description": "The password to connect with",
		            "type": "string",
		            "required": true,
        		    "default": ""
        		},
         		"keepSessionAlive": {
					"title": "Keep Session Alive",
        		    "description": "If the session should be kept alive",
		            "type": "boolean",
		            "required": true,
        		    "default": false
        		},
         		"newRVersion": {
					"title": "Is New R Version",
        		    "description": "If the R version is 2.4-2.5 or 2.6+",
		            "type": "boolean",
		            "required": true,
        		    "default": false
        		}
            }
        },
        "inputSemanticTypes": {
            "title": "Semantic Input Ports",
            "description": "Inputs to the R script",
            "type": "array",
            "required": false,
            "items": { "type": "object", "$ref": "#/definitions/semanticPort" }
        },
        "outputSemanticTypes": {
            "title": "Semantic Output Ports",
            "description": "Outputs from the R script",
            "type": "array",
            "required": false,
            "items": { "type": "object", "$ref": "#/definitions/semanticPort" }
        }
    },
    "definitions": {
    	"semanticPort": {
            "properties": {
           		"name": {
            		"title": "Port Name",
            		"description": "The name of the port",
            		"type": "string",
		          	"required": true
           		},
           		"semanticType": {
            		"title": "Semantic Type",
            		"description": "The semantic type of the port",
            		"enum": ["BOOL", "DOUBLE", "INTEGER", "R_EXP", "STRING", "BOOL_LIST", "DOUBLE_LIST", "INTEGER_LIST", "STRING_LIST", "PNG_FILE", "TEXT_FILE"],
 		         	"required": true
            	}
            }
    	}
    }
}
