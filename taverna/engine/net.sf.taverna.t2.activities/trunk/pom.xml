<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>parent</artifactId>
		<groupId>net.sf.taverna</groupId>
		<version>0.1.2009-02-12</version>
	</parent>

	<groupId>net.sf.taverna.t2</groupId>
	<artifactId>activities</artifactId>
	<version>0.10-SNAPSHOT</version>
	<packaging>pom</packaging>

	<name>Taverna 2 Activities</name>
	<description>
		A collection of Taverna 2 Activities. These are the core
		activities required to cover the functionality of Taverna 1, and
		includes translators to translate processors from SCUFL
		workflows.
	</description>

	<properties>
		<t2.infrastructure.version>1.13-SNAPSHOT</t2.infrastructure.version>
		<t2.core.version>0.10-SNAPSHOT</t2.core.version>
		<t2.lang.version>0.7-SNAPSHOT</t2.lang.version>
		<t2.security.version>0.8-SNAPSHOT</t2.security.version>
		<t2.core.refexts.version>0.8-SNAPSHOT</t2.core.refexts.version>
        <org.biomart.martservice.version>0.7.4-SNAPSHOT</org.biomart.martservice.version>
        <wsdl.generic.version>1.7-SNAPSHOT</wsdl.generic.version>
	</properties>

	<modules>
		<module>activity-test-utils</module>
		<module>all-activities</module>
		<module>apiconsumer-activity</module>
		<module>beanshell-activity</module>
		<module>biomart-activity</module>
		<module>biomoby-activity</module>
		<module>dataflow-activity</module>
		<module>dependency-activity</module>
		<module>localworker-activity</module>
		<module>rshell-activity</module>
		<module>soaplab-activity</module>
		<module>spreadsheet-import-activity</module>
		<module>stringconstant-activity</module>
		<module>wsdl-activity</module>
	</modules>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-clover-plugin</artifactId>
				<configuration>
					<jdk>1.5</jdk>
					<targetPercentage>50%</targetPercentage>
					<failOnViolation>false</failOnViolation>
				</configuration>
				<executions>
					<execution>
						<phase>pre-site</phase>
						<goals>
							<goal>instrument</goal>
							<goal>aggregate</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<reporting>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-clover-plugin</artifactId>
				<configuration>
					<generatePdf>true</generatePdf>
					<generateXml>true</generateXml>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<configuration>
					<minmemory>128m</minmemory>
					<maxmemory>512</maxmemory>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-surefire-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>jxr-maven-plugin</artifactId>
			</plugin>
		</plugins>
	</reporting>
	<repositories>
		<repository>
			<releases />
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
			<id>mygrid-repository</id>
			<name>myGrid Repository</name>
			<url>http://www.mygrid.org.uk/maven/repository</url>
		</repository>	
