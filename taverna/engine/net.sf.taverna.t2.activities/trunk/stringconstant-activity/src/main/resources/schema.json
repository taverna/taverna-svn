{
    "$schema": "http://json-schema.org/draft-03/schema#",
    "id": "http://ns.taverna.org.uk/2010/activity/constant.schema.json",
    "title": "String constant activity configuration",
    "type": "object",
    "properties": {
        "@context": {
            "description": "JSON-LD context for interpreting the configuration as RDF",
            "required": true,
            "enum": ["http://ns.taverna.org.uk/2010/activity/constant.context.json"]
        },
        "string": {
            "title": "Constant String Value",
            "description": "The value of the string constant",
            "type": "string",
            "required": true
        }
    }
}
