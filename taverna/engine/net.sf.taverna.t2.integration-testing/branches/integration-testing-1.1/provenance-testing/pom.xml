	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>integration-testing</artifactId>
		<groupId>net.sf.taverna.t2</groupId>
		<version>1.1-SNAPSHOT</version>
	</parent>
	<groupId>net.sf.taverna.t2.integration-testing</groupId>
	<artifactId>provenance-testing</artifactId>
	<name>Provenance testing</name>

	<properties>
		<t2.activities.version>0.9-SNAPSHOT</t2.activities.version>
		<t2.infrastructure.version>1.12-SNAPSHOT</t2.infrastructure.version>
		<t2.core.version>0.9-SNAPSHOT</t2.core.version>
		<t2.lang.version>0.6-SNAPSHOT</t2.lang.version>
		<t2.compatibility.version>0.9-SNAPSHOT</t2.compatibility.version>
		<t2.translators.version>0.9-SNAPSHOT</t2.translators.version>
		<taverna.version>1.7.2.0</taverna.version>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<skip>true</skip>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.4</version>
		</dependency>
		<dependency>
			<groupId>jdom</groupId>
			<artifactId>jdom</artifactId>
			<version>1.0</version>
		</dependency>

		<dependency>
			<groupId>commons-io</groupId>
			<artifactId>commons-io</artifactId>
			<version>1.4</version>
		</dependency>

		<dependency>
