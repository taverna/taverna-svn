	        <url>http://biomoby.org/m2repo/</url>
	        <snapshots>
	            <enabled>false</enabled>
	        </snapshots>
	        <releases>
	            <enabled>true</enabled>
	        </releases>
	    </repository>
    	<repository>
            <id>jboss</id>
            <name>JBoss repository</name>
            <url>http://repository.jboss.org/maven2/</url>
            <snapshots>
	            <enabled>false</enabled>
            </snapshots>
            <releases>
                <enabled>true</enabled>
            </releases>
        </repository>
        <repository>
            <id>javanet</id>
            <name>java.net</name>
            <url>http://download.java.net/maven/2/</url>
            <snapshots>
	            <enabled>false</enabled>
            </snapshots>
            <releases>
                <enabled>true</enabled>
            </releases>
        </repository>
	</repositories>
	<scm>
		<connection>scm:svn:http://taverna.googlecode.com/svn/taverna/compatibility/net.sf.taverna.t2.translators/trunk/</connection>
		<developerConnection>scm:svn:https://taverna.googlecode.com/svn/taverna/compatibility/net.sf.taverna.t2.translators/trunk/</developerConnection>
		<url>http://code.google.com/p/taverna/source/browse/#svn/taverna/compatibility/net.sf.taverna.t2.translators/trunk</url>
