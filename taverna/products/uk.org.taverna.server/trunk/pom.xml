						<version>2.7</version>
						<configuration>
							<show>private</show>
							<nohelp>true</nohelp>
							<detectLinks>true</detectLinks>
							<linksource>true</linksource>
							<stylesheet>maven</stylesheet>
							<groups>
								<group>
									<title>Server Core WebService</title>
									<packages>org.taverna.server.master:org.taverna.server.master.common:org.taverna.server.master.rest:org.taverna.server.master.soap</packages>
