<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:util="http://www.springframework.org/schema/util"
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.0.3.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<description>
		The Taverna Server bean, plus supporting configuration.
		THIS IS THE CONFIGURATION FOR SEMI-SECURE OPERATION ON WINDOWS.
	</description>

	<import resource="webappBeans.xml" />

	<!-- This is all the same as the secure config *EXCEPT* for this override. -->
	<context:property-placeholder order="0" ignore-unresolvable="true"
		 properties-ref="factory.config.override" />
	<util:properties id="factory.config.override">
		<prop key="backEndFactory">org.taverna.server.master.localworker.ForkRunFactory</prop>
	</util:properties>

	<bean id="MBeanServer" class="org.springframework.jmx.support.MBeanServerFactoryBean">
		<property name="locateExistingServerIfPossible" value="true" />
	</bean>
	<context:mbean-export server="MBeanServer"
		default-domain="${my.domain}" registration="ignoreExisting" />

	<security:http realm="tavernaserver" create-session="never">
		<security:http-basic />
		<security:intercept-url pattern="/" filters="none" />
		<security:intercept-url pattern="/services"
			filters="none" />
		<security:intercept-url pattern="/soap/**"
			access="ROLE_tavernauser" requires-channel="https" method="POST" />
		<security:intercept-url pattern="/rest"
			filters="none" />
		<security:intercept-url pattern="/rest/runs"
			access="ROLE_tavernauser" requires-channel="https" />
		<security:intercept-url pattern="/rest/runs/**"
			access="ROLE_tavernauser" requires-channel="https" />
		<security:intercept-url pattern="/rest/policy"
			filters="none" />
		<security:intercept-url pattern="/rest/policy/**"
			access="ROLE_tavernauser" requires-channel="https" />
		<security:intercept-url pattern="/feed"
			access="ROLE_tavernauser" requires-channel="https" />
		<security:intercept-url pattern="/feed/**"
			access="ROLE_tavernauser" requires-channel="https" />
		<security:intercept-url pattern="/admin"
			access="ROLE_tavernasuperuser" requires-channel="https" />
		<security:intercept-url pattern="/admin/**"
			access="ROLE_tavernasuperuser" requires-channel="https" />
	</security:http>
	<bean class="org.taverna.server.master.common.Uri.Rewriter"
		autowire="byType" id="URI-Rewriter-Thunk" />
	<security:authentication-manager>
		<security:authentication-provider user-service-ref="userStore" />
	</security:authentication-manager>
</beans>
