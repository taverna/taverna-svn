<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor name="taverna-activity-archetype">
	<!-- If Maven seems to suddently fall back to using archetype.xml and ignore all settings
		in here - triple check XML syntax as no error message is reported by the archetype plugin! 
	 -->
	<modules>
		<module id="example=activity" dir="example-activity" name="example-activity">
			<fileSets>
				<fileSet filtered="true" packaged="true" encoding="UTF-8">
					<directory>src/main/java</directory>
					<includes>
						<include>**/*.java</include>
					</includes>
				</fileSet>
				<fileSet filtered="true" packaged="true" encoding="UTF-8">
					<directory>src/test/java</directory>
					<includes>
						<include>**/*.java</include>
					</includes>
				</fileSet>

			</fileSets>
		</module>
		<module id="example-activity-ui" dir="example-activity-ui" name="example-activity-ui">
			<fileSets>
				<fileSet filtered="true" packaged="true" encoding="UTF-8">
					<directory>src/main/java</directory>
					<includes>
						<include>**/*.java</include>
					</includes>
				</fileSet>
				<fileSet encoding="UTF-8" filtered="true">
					<directory>src/main/resources</directory>
					<includes>
						<include>**/*.ServiceDescriptionProvider</include>
						<include>**/*.ContextualViewFactory</include>
					</includes>
				</fileSet>
				<fileSet filtered="true" packaged="true" encoding="UTF-8">
					<directory>src/test/java</directory>
					<includes>
						<include>**/*.java</include>
					</includes>
				</fileSet>
			
			</fileSets>
		</module>
	</modules>
</archetype-descriptor>