<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                      http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="StringConstantActivityIcon" class="net.sf.taverna.t2.activities.stringconstant.servicedescriptions.StringConstantActivityIcon" />

	<bean id="StringConstantTemplateService" class="net.sf.taverna.t2.activities.stringconstant.servicedescriptions.StringConstantTemplateService" />

	<bean id="AddStringConstantTemplateAction" class="net.sf.taverna.t2.activities.stringconstant.menu.AddStringConstantTemplateAction">
			<property name="editManager" ref="editManager" />
			<property name="menuManager" ref="menuManager" />
			<property name="dataflowSelectionManager" ref="dataflowSelectionManager" />
			<property name="activityIconManager" ref="activityIconManager" />
	</bean>
	<bean id="AddStringConstantTemplateMenuAction" class="net.sf.taverna.t2.activities.stringconstant.menu.AddStringConstantTemplateMenuAction">
			<property name="editManager" ref="editManager" />
			<property name="menuManager" ref="menuManager" />
			<property name="dataflowSelectionManager" ref="dataflowSelectionManager" />
			<property name="activityIconManager" ref="activityIconManager" />
	</bean>
	<bean id="ConfigureStringConstantMenuAction" class="net.sf.taverna.t2.activities.stringconstant.menu.ConfigureStringConstantMenuAction">
			<property name="editManager" ref="editManager" />
			<property name="fileManager" ref="fileManager" />
			<property name="activityIconManager" ref="activityIconManager" />
	</bean>

	<bean id="StringConstantActivityViewFactory" class="net.sf.taverna.t2.activities.stringconstant.views.StringConstantActivityViewFactory">
			<property name="editManager" ref="editManager" />
			<property name="fileManager" ref="fileManager" />
			<property name="activityIconManager" ref="activityIconManager" />
			<property name="colourManager" ref="colourManager" />
	</bean>

</beans>
